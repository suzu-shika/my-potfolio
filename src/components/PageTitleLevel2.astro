---
const { pageTitle } = Astro.props;
---

<h2 class="c-page-title-level2">{pageTitle}</h2>

<style is:global lang="scss">
  @use '../styles/_breakpoints.scss' as *;

  /* component > c-page-title-level2
  ----------------------------------- */
  .c-page-title-level2 {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    font-size: 24px;
    font-weight: 700;

    &::before {
      content: "";
      width: 40px;
      height: 40px;
      background-image: url(/assets/images/global/logo-symbol.svg);
      background-repeat: no-repeat;
      background-size: contain;
      background-position: center center;
    }
  }

  @include mq() {
    .c-page-title-level2 {
      font-size: 30px;
    }
  }
</style>
